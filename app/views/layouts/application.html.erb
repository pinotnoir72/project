<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload'%>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  
 
  
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= action_cable_meta_tag %>
</head>


<body>

<!--nav start-->
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" 

<%= link_to "Bikes Etc", root_path %></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a 

<%= link_to "Home", static_pages_landing_page_path %></li>
      <li><%= link_to "About", static_pages_about_path %></li>
      <li><%= link_to "Contact", static_pages_contact_path %></li>
      <li><%= link_to("Products", products_path) %></li>
    </ul>
<!-- start search form-->    
    <form class="navbar-form navbar-left">
     
        <%= form_tag("/products", method: "get") do %>
        <%= text_field_tag(:q, "Search",class: "form-control") %>
        <%= submit_tag("Submit",  class: "btn btn-default btn-primary btn-md") %>
         <% end %>
        
    <ul class="nav pull-right">
     
        <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          <% else %>
            <li><%= link_to('Login', new_user_session_path,class:"glyphicon glyphicon-log-in") %></li>
            <li><%= link_to('Sign-In',new_user_registration_path,class:"glyphicon glyphicon-user") %></li>
        <% end %>
    </ul>

 </nav>

      <% if notice %>
         <div class="alert alert-info"><%= notice %></div>
      <% end %>
      
      <% if alert %>
       <div class="alert alert-warning"><%= alert %></div>
      <% end %>

 
<%= yield %>

<footer>
  <nav class="navbar navbar-inverse navbar-fixed-bottom">
    <div class= "container-fluid"></div>
      <div class = "nav-copy">
        <p>&copy; 2015 Bikes ETC</p> 
      </div>
    </div>  
  </nav>
</footer>


</body>
</html>
